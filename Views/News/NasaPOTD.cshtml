@model Week15Project.Models.News.NASA_POTD

@{
    ViewData["Title"] = "NASA Picture Of The Day";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="News" asp-action="AddPOTDToForum">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="container d-flex justify-content-center align-items-center">
                <div class="card" style="max-width: 80%;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="@Model.Url" class="img-fluid rounded-start" alt="NASA Image of the Day">
                            <input asp-for="Url" hidden />
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@Model.Title</h5>
                                <input asp-for="Title" hidden />
                                <p class="card-text">@Model.Explanation</p>
                                <input asp-for="Explanation" hidden />
                                <p class="card-text"><small class="text-muted">@Model.DatePosted.ToShortDateString()</small></p>
                                <input asp-for="DatePosted" hidden />
                                @if (Model.postId == 0)
                                {
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <input type="submit" value="Start a discussion" class="btn btn-primary" />
                                    }
                                }
                                else
                                {
                                    <a class="btn btn-success" asp-action="ViewPost" asp-controller="Forum" asp-route-postId="@Model.postId">View discussion</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a asp-controller="News" asp-action="NasaPOTD" asp-route-date="@Model.DatePosted.AddDays(-1)" class="carousel-control-prev" type="button">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    @if (Model.DatePosted < DateTime.Today)
    {
        <a asp-controller="News" asp-action="NasaPOTD" asp-route-date="@Model.DatePosted.AddDays(1)" class="carousel-control-next" type="button">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
    }
</div>
</form>