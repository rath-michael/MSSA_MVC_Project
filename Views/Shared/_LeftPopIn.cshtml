@inject IRoomProfiler profiler

<div>
    @foreach (var item in profiler.GetAllRooms())
    {
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @item.RoomName
                <a class="btn btn-success" asp-controller="Forum" asp-action="ViewRoom" asp-route-roomID="@item.RoomId">View Room</a>
                <span class="badge bg-primary rounded-pill">@profiler.GetPostCountPerRoom(item.RoomId)</span>
            </li>
        </ul>
    }
</div>