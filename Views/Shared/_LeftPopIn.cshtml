@inject IRoomProfiler profiler

<table class="table">
    @foreach (var item in profiler.GetAllRooms())
    {
        <tr class="d-table-row">
            <td style="width:60%">
                @item.RoomName
            </td>
            <td style="width:25%">
                 <a class="btn btn-success" asp-controller="Forum" asp-action="ViewRoom" asp-route-roomID="@item.RoomId">View Room</a>
            </td>
            <td style="width:15%">
                <span class="badge bg-primary rounded-pill">@item.Posts.Count Post(s)</span>
            </td>
        </tr>




