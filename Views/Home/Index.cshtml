@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card text-center" style="height: 20rem">
                <div class="card-header">
                    <p>Popular Today</p>
                    <ul class="nav nav-tabs card-header-tabs text-center">
                        <li class="nav-item m-auto">
                            <a class="nav-link" asp-area="" asp-controller="Forum" asp-action="ViewTopRoom" asp-route-id="1">Most Threads</a>
                        </li>
                        <li class="nav-item m-auto">
                            <a class="nav-link" asp-area="" asp-controller="Forum" asp-action="ViewTopRoom" asp-route-id="2">Most Comments</a>
                        </li>
                        <li class="nav-item m-auto">
                            <a class="nav-link" asp-area="" asp-controller="Forum" asp-action="ViewTopRoom" asp-route-id="3">Room Three</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Discussion Forum</h5>
                        <p class="card-text">A place to post and discuss about all things NASA.</p>
                        <a class="btn btn-primary" asp-area="" asp-controller="Forum" asp-action="ViewAllRooms">View Forum</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card text-center" style="height: 20rem">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">NASA Feed</h5>
                    <p class="card-text">A variety of data and images directly from NASA</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Market" asp-action="Index">View Feed</a>
                </div>
            </div>
        </div>
    </div>
</div>